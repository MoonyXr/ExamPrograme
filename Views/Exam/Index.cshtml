@model List<ExamPrograme.Models.ViewModel.ExamViewModel>

@{
    ViewData["Title"] = "İmtahan Cədvəli";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">@ViewData["Title"]</h2>

            <div class="text-end mb-3">
                <a asp-action="AddExam" class="btn btn-success">+ Yeni İmtahan Əlavə Et</a>
            </div>

            <table class="table table-bordered table-hover align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Dərs Kodu</th>
                        <th>Şagird Nömrəsi</th>
                        <th>İmtahan Tarixi</th>
                        <th>Qiymət</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var exam in Model)
                        {
                            <tr>
                                <td>@exam.LessonCode</td>
                                <td>@exam.StudentId</td>
                                <td>@exam.ExamDate.ToString("yyyy-MM-dd")</td>
                                <td>@(exam.Grade.HasValue ? exam.Grade.ToString() : "N/A")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">Heç bir imtahan tapılmadı.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
