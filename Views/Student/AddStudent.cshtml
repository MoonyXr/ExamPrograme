@model ExamPrograme.Models.ViewModel.StudentViewModel

@{
    ViewData["Title"] = "Yeni Şagird Əlavə Et";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddStudent" method="post">
    <div class="form-group">
        <label asp-for="FirstName" class="control-label">Adı</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="control-label">Soyadı</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClassLevel" class="control-label">Sinif</label>
        <input asp-for="ClassLevel" class="form-control" />
        <span asp-validation-for="ClassLevel" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Əlavə Et</button>
    <a asp-action="Index" class="btn btn-secondary">Geri Qayıt</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
